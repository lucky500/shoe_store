<div class="row">
  <div class="col s6">
    <div>Shoe Store</div>
    <form action="/add_store" method="post">
      <p>Don't see your favorite Store? </p>
      <label for="name">Store Name: </label>
      <input type="text" name="name">
      <button type="submit" class="btn">Add a Store</button>
    </form>
  </div>
  <div class="col s6">
    <h4>List of Stores</h4>

    <ul class="stores">
      <% if @stores.any? %>
        <% @stores.each do |store| %>
          <li>
            <a href="/stores/<%= store.id %>">
              <%= store.name %>
            </a>
          </li> 
        <% end %>
      <% else %>
        <p>There are currently no stores.</p>
      <% end %>
    </ul>
  </div>
  <div>
    <p>See all available brands:</p>
    <a href="/brands">View all brands</a>
  </div>
</div>