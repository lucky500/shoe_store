<div class="row">
  <div class="col s12">
    <h4>Shoes</h4>
    <ul class="brands">
      <% if @brands.any? %>
        <% @brands.each do |brand| %>
          <li>
             <a href="/brands/<%= brand.id %>">
              <div>
                <h5><%= brand.name %></h5>
                <p><%= brand.model %></p>
                <p><%= brand.price %></p>
              </div>
            </a>
          </li>
        <% end %>
      <% else %>
        <p>There is no brands yet.</p>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <!-- add brands -->
    <div>
      <h5>Add a brand</h5>
      <form action="/add_brand" method="post">
        <label for="name">Brand Name:</label>
        <input type="text" name="name">
        <label for="model">Model Name:</label>
        <input type="text" name="model">
        <label for="price">Price:</label>
        <input type="integer" name="price">
        <button class="btn" type="submit">Add</button>
      </form>
    </div>
  </div>
</div>
<div class="row">
  <p>Return Home</p>
  <a href="/">Home</a>
</div>
